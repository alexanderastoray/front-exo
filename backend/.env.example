# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database
DB_TYPE=sqlite
DB_DATABASE=./data/expense-management.sqlite
DB_SYNCHRONIZE=true
DB_LOGGING=true

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf

# Future (V2)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=1h
